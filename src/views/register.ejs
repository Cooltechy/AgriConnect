<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Registration - FarmerMarketPlace</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #4CAF50, #2E7D32);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            overflow: hidden;
        }

        .header {
            background: linear-gradient(135deg, #2E7D32, #4CAF50);
            color: white;
            padding: 30px;
            text-align: center;
        }

        .header h1 {
            margin-bottom: 10px;
            font-size: 2.5em;
        }

        .header p {
            opacity: 0.9;
        }

        .form-container {
            padding: 40px;
        }

        .user-type-selection {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
            justify-content: center;
        }

        .user-type-card {
            flex: 1;
            max-width: 200px;
            padding: 20px;
            border: 3px solid #e0e0e0;
            border-radius: 10px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .user-type-card:hover {
            border-color: #4CAF50;
            transform: translateY(-2px);
        }

        .user-type-card.selected {
            border-color: #4CAF50;
            background-color: #f1f8e9;
        }

        .user-type-card h3 {
            color: #2E7D32;
            margin-bottom: 10px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #333;
        }

        input {
            width: 100%;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }

        input:focus {
            outline: none;
            border-color: #4CAF50;
        }

        .submit-btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #4CAF50, #2E7D32);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.3s ease;
            margin-top: 20px;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
        }

        .error {
            background-color: #ffebee;
            color: #c62828;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid #c62828;
        }

        .links a {
            color: #4CAF50;
            text-decoration: none;
            font-weight: 500;
        }

        .links a:hover {
            text-decoration: underline;
        }

        .divider {
            text-align: center;
            margin: 20px 0;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üåæ FarmerMarketPlace</h1>
            <p>Join our farming community - Register as a Farmer or Client</p>
        </div>

        <div class="form-container">
            <% if (typeof error !== 'undefined') { %>
                <div class="error"><%= error %></div>
            <% } %>

            <form action="/register" method="POST" id="registrationForm">
                <!-- User Type Selection -->
                <div class="user-type-selection">
                    <div class="user-type-card" data-type="farmer">
                        <h3>üöú Farmer</h3>
                        <p>Grow and sell your produce</p>
                        <input type="radio" name="userType" value="farmer" style="display: none;">
                    </div>
                    <div class="user-type-card" data-type="client">
                        <h3>üè¢ Client</h3>
                        <p>Buy fresh farm products</p>
                        <input type="radio" name="userType" value="client" style="display: none;">
                    </div>
                </div>

                <!-- Basic Information -->
                <div class="form-group">
                    <label for="name">Full Name *</label>
                    <input type="text" id="name" name="name" required 
                           value="<%= typeof formData !== 'undefined' ? formData.name || '' : '' %>">
                </div>

                <div class="form-group">
                    <label for="email">Email *</label>
                    <input type="email" id="email" name="email" required
                           value="<%= typeof formData !== 'undefined' ? formData.email || '' : '' %>">
                </div>

                <div class="form-group">
                    <label for="password">Password *</label>
                    <input type="password" id="password" name="password" required minlength="6"
                           placeholder="Minimum 6 characters">
                </div>

                <div class="form-group">
                    <label for="contact">Contact Number *</label>
                    <input type="tel" id="contact" name="contact" required
                           value="<%= typeof formData !== 'undefined' ? formData.contact || '' : '' %>">
                </div>

                <button type="submit" class="submit-btn">Register Account</button>
            </form>

            <div class="divider" style="text-align: center; margin: 20px 0; color: #666;">
                Already have an account?
            </div>

            <div class="links" style="text-align: center;">
                <a href="/login" style="color: #4CAF50; text-decoration: none; font-weight: 500;">üîë Login Here</a>
            </div>

            <div class="links" style="text-align: center; margin-top: 15px;">
                <a href="/" style="color: #4CAF50; text-decoration: none; font-weight: 500;">üè† Back to Home</a>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const userTypeCards = document.querySelectorAll('.user-type-card');

            userTypeCards.forEach(card => {
                card.addEventListener('click', function() {
                    // Remove selected class from all cards
                    userTypeCards.forEach(c => c.classList.remove('selected'));
                    
                    // Add selected class to clicked card
                    this.classList.add('selected');
                    
                    // Set radio button value
                    const radioButton = this.querySelector('input[type="radio"]');
                    radioButton.checked = true;
                });
            });

            // Restore selection if form data exists (for error states)
            const formData = '<%= typeof formData !== "undefined" ? JSON.stringify(formData) : "{}" %>';
            if (formData !== '{}') {
                try {
                    const data = JSON.parse(formData.replace(/&#34;/g, '"'));
                    if (data.userType) {
                        const selectedCard = document.querySelector(`[data-type="${data.userType}"]`);
                        if (selectedCard) {
                            selectedCard.click();
                        }
                    }
                } catch (e) {
                    // No form data to restore
                }
            }
        });
    </script>
</body>
</html>