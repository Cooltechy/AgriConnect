<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Received Orders - Farmer Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #2E7D32 0%, #4CAF50 100%);
            min-height: 100vh;
            color: #333;
        }

        .navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0,0,0,0.1);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .nav-container {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: bold;
            color: #2E7D32;
        }

        .nav-links {
            display: flex;
            gap: 2rem;
        }

        .nav-links a {
            text-decoration: none;
            color: #333;
            font-weight: 500;
            transition: color 0.3s;
        }

        .nav-links a:hover {
            color: #2E7D32;
        }

        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 2rem;
        }

        .page-header {
            background: white;
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            text-align: center;
        }

        .page-title {
            font-size: 2.5rem;
            color: #2E7D32;
            margin-bottom: 10px;
        }

        .page-subtitle {
            color: #666;
            font-size: 1.1rem;
        }

        .stats-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            padding: 25px;
            border-radius: 15px;
            text-align: center;
            color: white;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .stat-icon {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .stat-label {
            opacity: 0.9;
            font-size: 1rem;
        }

        .filter-section {
            background: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 25px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .filter-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            align-items: end;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
        }

        .filter-group label {
            font-weight: 500;
            margin-bottom: 8px;
            color: #333;
        }

        .filter-group select,
        .filter-group input {
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.3s;
        }

        .filter-group select:focus,
        .filter-group input:focus {
            outline: none;
            border-color: #4CAF50;
        }

        .filter-btn {
            background: #4CAF50;
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 500;
            transition: background 0.3s;
            text-decoration: none;
            text-align: center;
            display: inline-block;
        }

        .filter-btn:hover {
            background: #2E7D32;
        }

        .orders-container {
            display: grid;
            gap: 20px;
        }

        .order-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            border-left: 4px solid #4CAF50;
            transition: transform 0.3s;
        }

        .order-card:hover {
            transform: translateY(-2px);
        }

        .order-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            flex-wrap: wrap;
            gap: 15px;
        }

        .order-id {
            font-size: 1.2rem;
            font-weight: bold;
            color: #2E7D32;
        }

        .order-date {
            color: #666;
            font-size: 0.9rem;
        }

        .order-status {
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 500;
            text-transform: capitalize;
        }

        .status-delivered {
            background: #e8f5e8;
            color: #2e7d32;
        }

        .status-in-transit {
            background: #fff3e0;
            color: #ef6c00;
        }

        .status-confirmed {
            background: #e3f2fd;
            color: #1976d2;
        }

        .status-pending {
            background: #fff3e0;
            color: #f57c00;
        }

        .status-cancelled {
            background: #ffebee;
            color: #c62828;
        }

        .order-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 10px;
        }

        .detail-item {
            text-align: center;
        }

        .detail-label {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 5px;
        }

        .detail-value {
            font-weight: bold;
            color: #333;
            font-size: 1.1rem;
        }

        .customer-info {
            background: #e8f5e8;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .customer-info h4 {
            color: #2E7D32;
            margin-bottom: 10px;
        }

        .customer-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 10px;
        }

        .order-actions {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            cursor: pointer;
            border: none;
            transition: all 0.3s;
            text-align: center;
        }

        .btn-outline {
            border: 2px solid #4CAF50;
            color: #4CAF50;
            background: transparent;
        }

        .btn-outline:hover {
            background: #4CAF50;
            color: white;
        }

        .btn-primary {
            background: #4CAF50;
            color: white;
        }

        .btn-primary:hover {
            background: #2E7D32;
        }

        .btn-warning {
            background: #FF9800;
            color: white;
        }

        .btn-warning:hover {
            background: #F57C00;
        }

        .btn-success {
            background: #2196F3;
            color: white;
        }

        .btn-success:hover {
            background: #1976D2;
        }

        .no-orders {
            text-align: center;
            padding: 60px 20px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .no-orders-icon {
            font-size: 4rem;
            margin-bottom: 20px;
        }

        .no-orders h3 {
            color: #666;
            margin-bottom: 10px;
        }

        .no-orders p {
            color: #999;
            margin-bottom: 25px;
        }

        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-top: 30px;
            flex-wrap: wrap;
        }

        .pagination a,
        .pagination span {
            padding: 10px 15px;
            border-radius: 8px;
            text-decoration: none;
            color: #4CAF50;
            border: 2px solid #e0e0e0;
            background: white;
            font-weight: 500;
            transition: all 0.3s;
        }

        .pagination .current {
            background: #4CAF50;
            color: white;
            border-color: #4CAF50;
        }

        .pagination a:hover:not(.current) {
            background: #e8f5e8;
            border-color: #4CAF50;
        }

        @media (max-width: 768px) {
            .container {
                padding: 0 1rem;
            }
            
            .page-title {
                font-size: 2rem;
            }
            
            .stats-section {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .order-header {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .order-details,
            .customer-details {
                grid-template-columns: 1fr;
            }
            
            .filter-grid {
                grid-template-columns: 1fr;
            }
            
            .order-actions {
                width: 100%;
            }
            
            .btn {
                flex: 1;
                min-width: 120px;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="logo">üåæ FarmerMarketPlace - Farmer</div>
            <div class="nav-links">
                <a href="/farmer-dashboard?userId=<%= typeof farmerId !== 'undefined' ? farmerId : '' %>">Dashboard</a>
                <a href="/products/farmer/<%= typeof farmerId !== 'undefined' ? farmerId : '' %>">My Products</a>
                <a href="/orders/farmer-orders?farmerId=<%= typeof farmerId !== 'undefined' ? farmerId : '' %>">Orders</a>
                <a href="/">Home</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">üì¶ Received Orders</h1>
            <p class="page-subtitle">Manage and track orders from your customers</p>
        </div>

        <!-- Order Statistics -->
        <div class="stats-section">
            <div class="stat-card" style="background: linear-gradient(135deg, #4CAF50, #2E7D32);">
                <div class="stat-icon">üìä</div>
                <div class="stat-number">
                    <%= typeof totalOrders !== 'undefined' ? totalOrders : 0 %>
                </div>
                <div class="stat-label">Total Orders</div>
            </div>
            
            <div class="stat-card" style="background: linear-gradient(135deg, #2196F3, #1976D2);">
                <div class="stat-icon">üí∞</div>
                <div class="stat-number">
                    ‚Çπ<%= typeof totalRevenue !== 'undefined' ? Math.round(totalRevenue).toLocaleString() : 0 %>
                </div>
                <div class="stat-label">Total Revenue</div>
            </div>
            
            <div class="stat-card" style="background: linear-gradient(135deg, #FF9800, #F57C00);">
                <div class="stat-icon">‚è≥</div>
                <div class="stat-number">
                    <%= typeof pendingOrders !== 'undefined' ? pendingOrders : 0 %>
                </div>
                <div class="stat-label">Pending Orders</div>
            </div>
            
            <div class="stat-card" style="background: linear-gradient(135deg, #9C27B0, #7B1FA2);">
                <div class="stat-icon">‚úÖ</div>
                <div class="stat-number">
                    <%= typeof deliveredOrders !== 'undefined' ? deliveredOrders : 0 %>
                </div>
                <div class="stat-label">Delivered</div>
            </div>

            <div class="stat-card" style="background: linear-gradient(135deg, #607D8B, #455A64);">
                <div class="stat-icon">üöö</div>
                <div class="stat-number">
                    <%= typeof confirmedOrders !== 'undefined' ? confirmedOrders : 0 %>
                </div>
                <div class="stat-label">Confirmed</div>
            </div>
        </div>

        <!-- Filter Section -->
        <div class="filter-section">
            <h3 style="margin-bottom: 20px; color: #333;">üîç Filter Orders</h3>
            <form method="GET" action="/orders/farmer-orders" style="width: 100%;">
                <input type="hidden" name="farmerId" value="<%= typeof farmerId !== 'undefined' ? farmerId : '' %>">
                
                <div class="filter-grid">
                    <div class="filter-group">
                        <label for="status">Order Status</label>
                        <select id="status" name="status">
                            <option value="all" <%= typeof filters !== 'undefined' && filters.status === 'all' ? 'selected' : '' %>>All Orders</option>
                            <option value="pending" <%= typeof filters !== 'undefined' && filters.status === 'pending' ? 'selected' : '' %>>Pending</option>
                            <option value="confirmed" <%= typeof filters !== 'undefined' && filters.status === 'confirmed' ? 'selected' : '' %>>Confirmed</option>
                            <option value="in-transit" <%= typeof filters !== 'undefined' && filters.status === 'in-transit' ? 'selected' : '' %>>In Transit</option>
                            <option value="delivered" <%= typeof filters !== 'undefined' && filters.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
                            <option value="cancelled" <%= typeof filters !== 'undefined' && filters.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label for="dateFrom">From Date</label>
                        <input type="date" id="dateFrom" name="dateFrom" value="<%= typeof filters !== 'undefined' ? filters.dateFrom : '' %>">
                    </div>
                    
                    <div class="filter-group">
                        <label for="dateTo">To Date</label>
                        <input type="date" id="dateTo" name="dateTo" value="<%= typeof filters !== 'undefined' ? filters.dateTo : '' %>">
                    </div>
                    
                    <div class="filter-group">
                        <label for="limit">Orders per page</label>
                        <select id="limit" name="limit">
                            <option value="10" <%= typeof filters !== 'undefined' && filters.limit == 10 ? 'selected' : '' %>>10 per page</option>
                            <option value="25" <%= typeof filters !== 'undefined' && filters.limit == 25 ? 'selected' : '' %>>25 per page</option>
                            <option value="50" <%= typeof filters !== 'undefined' && filters.limit == 50 ? 'selected' : '' %>>50 per page</option>
                        </select>
                    </div>
                    
                    <div class="filter-group" style="display: flex; gap: 10px; align-items: end;">
                        <button type="submit" class="filter-btn" style="flex: 1;">Apply Filters</button>
                        <a href="/orders/farmer-orders?farmerId=<%= typeof farmerId !== 'undefined' ? farmerId : '' %>" class="filter-btn" style="background: #666; flex: 1;">Clear All</a>
                    </div>
                </div>
            </form>
        </div>

        <!-- Orders List -->
        <div class="orders-container">
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="no-orders">
                    <div class="no-orders-icon">‚ùå</div>
                    <h3>Error Loading Orders</h3>
                    <p><%= error %></p>
                    <a href="/orders/farmer-orders?farmerId=<%= typeof farmerId !== 'undefined' ? farmerId : '' %>" class="btn btn-primary">Retry</a>
                </div>
            <% } else if (typeof orders !== 'undefined' && orders.length > 0) { %>
                <% orders.forEach(order => { %>
                    <div class="order-card">
                        <div class="order-header">
                            <div>
                                <div class="order-id">Order #<%= order.orderNumber %></div>
                                <div class="order-date">Received on <%= new Date(order.createdAt).toLocaleDateString('en-US', { 
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric',
                                    hour: '2-digit',
                                    minute: '2-digit'
                                }) %></div>
                            </div>
                            <div class="order-status status-<%= order.status %>">
                                <%= order.status.charAt(0).toUpperCase() + order.status.slice(1).replace('-', ' ') %>
                            </div>
                        </div>
                        
                        <!-- Customer Information -->
                        <div class="customer-info">
                            <h4>üë§ Customer Details</h4>
                            <div class="customer-details">
                                <div><strong>Name:</strong> <%= order.buyerName %></div>
                                <div><strong>Email:</strong> <%= order.buyerEmail %></div>
                                <div><strong>Contact:</strong> <%= order.buyerContact %></div>
                                <% if (order.deliveryAddress && order.deliveryAddress.city) { %>
                                    <div><strong>Location:</strong> <%= order.deliveryAddress.city %>, <%= order.deliveryAddress.state %></div>
                                <% } %>
                            </div>
                        </div>
                        
                        <div class="order-details">
                            <div class="detail-item">
                                <div class="detail-label">Product</div>
                                <div class="detail-value"><%= order.productName %></div>
                            </div>
                            
                            <div class="detail-item">
                                <div class="detail-label">Quantity Ordered</div>
                                <div class="detail-value"><%= order.quantity %> <%= order.unit %></div>
                            </div>
                            
                            <div class="detail-item">
                                <div class="detail-label">Price per <%= order.unit %></div>
                                <div class="detail-value">‚Çπ<%= order.pricePerUnit.toLocaleString() %></div>
                            </div>
                            
                            <div class="detail-item">
                                <div class="detail-label">Total Amount</div>
                                <div class="detail-value">‚Çπ<%= order.totalAmount.toLocaleString() %></div>
                            </div>
                            
                            <div class="detail-item">
                                <div class="detail-label">Payment Method</div>
                                <div class="detail-value"><%= order.paymentMethod.replace('-', ' ').toUpperCase() %></div>
                            </div>
                        </div>
                        
                        <% if (order.notes) { %>
                        <div style="background: #f0f0f0; padding: 10px; border-radius: 8px; margin-bottom: 15px;">
                            <strong>Customer Notes:</strong> <%= order.notes %>
                        </div>
                        <% } %>
                        
                        <div class="order-actions">
                            <a href="/orders/<%= order._id %>" class="btn btn-outline">
                                üìÑ View Full Details
                            </a>
                            
                            <% if (order.status === 'pending') { %>
                                <button onclick="updateOrderStatus('<%= order._id %>', 'confirmed')" class="btn btn-success">
                                    ‚úÖ Confirm Order
                                </button>
                                <button onclick="updateOrderStatus('<%= order._id %>', 'cancelled')" class="btn btn-warning">
                                    ‚ùå Reject Order
                                </button>
                            <% } else if (order.status === 'confirmed') { %>
                                <button onclick="updateOrderStatus('<%= order._id %>', 'in-transit')" class="btn btn-primary">
                                    üöö Mark as Shipped
                                </button>
                            <% } else if (order.status === 'in-transit') { %>
                                <button onclick="updateOrderStatus('<%= order._id %>', 'delivered')" class="btn btn-success">
                                    ‚úÖ Mark as Delivered
                                </button>
                            <% } %>
                            
                            <a href="tel:<%= order.buyerContact %>" class="btn btn-outline">
                                üìû Call Customer
                            </a>
                            
                            <a href="mailto:<%= order.buyerEmail %>" class="btn btn-outline">
                                üìß Email Customer
                            </a>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-orders">
                    <div class="no-orders-icon">üì¶</div>
                    <h3>No Orders Received</h3>
                    <% if (typeof filters !== 'undefined' && (filters.status !== 'all' || filters.dateFrom || filters.dateTo)) { %>
                        <p>No orders match your current filters. Try adjusting your search criteria.</p>
                        <a href="/orders/farmer-orders?farmerId=<%= typeof farmerId !== 'undefined' ? farmerId : '' %>" class="btn btn-primary">Clear Filters</a>
                    <% } else { %>
                        <p>You haven't received any orders yet. Keep your products updated and visible to attract customers!</p>
                        <a href="/products/add?userId=<%= typeof farmerId !== 'undefined' ? farmerId : '' %>" class="btn btn-primary">Add Products</a>
                    <% } %>
                </div>
            <% } %>
        </div>

        <!-- Pagination -->
        <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
        <div class="pagination">
            <% if (typeof hasPrevPage !== 'undefined' && hasPrevPage) { %>
                <a href="?farmerId=<%= typeof farmerId !== 'undefined' ? farmerId : '' %>&page=<%= typeof prevPage !== 'undefined' ? prevPage : 1 %>&status=<%= typeof filters !== 'undefined' ? filters.status : 'all' %>&dateFrom=<%= typeof filters !== 'undefined' ? filters.dateFrom : '' %>&dateTo=<%= typeof filters !== 'undefined' ? filters.dateTo : '' %>&limit=<%= typeof filters !== 'undefined' ? filters.limit : 10 %>">
                    ‚Üê Previous
                </a>
            <% } %>
            
            <% 
            const currentPage = typeof currentPage !== 'undefined' ? currentPage : 1;
            const totalPagesNum = typeof totalPages !== 'undefined' ? totalPages : 1;
            const startPage = Math.max(1, currentPage - 2);
            const endPage = Math.min(totalPagesNum, currentPage + 2);
            %>
            
            <% for (let i = startPage; i <= endPage; i++) { %>
                <% if (i === currentPage) { %>
                    <span class="current"><%= i %></span>
                <% } else { %>
                    <a href="?farmerId=<%= typeof farmerId !== 'undefined' ? farmerId : '' %>&page=<%= i %>&status=<%= typeof filters !== 'undefined' ? filters.status : 'all' %>&dateFrom=<%= typeof filters !== 'undefined' ? filters.dateFrom : '' %>&dateTo=<%= typeof filters !== 'undefined' ? filters.dateTo : '' %>&limit=<%= typeof filters !== 'undefined' ? filters.limit : 10 %>">
                        <%= i %>
                    </a>
                <% } %>
            <% } %>
            
            <% if (typeof hasNextPage !== 'undefined' && hasNextPage) { %>
                <a href="?farmerId=<%= typeof farmerId !== 'undefined' ? farmerId : '' %>&page=<%= typeof nextPage !== 'undefined' ? nextPage : 2 %>&status=<%= typeof filters !== 'undefined' ? filters.status : 'all' %>&dateFrom=<%= typeof filters !== 'undefined' ? filters.dateFrom : '' %>&dateTo=<%= typeof filters !== 'undefined' ? filters.dateTo : '' %>&limit=<%= typeof filters !== 'undefined' ? filters.limit : 10 %>">
                    Next ‚Üí
                </a>
            <% } %>
        </div>
        <% } %>
    </div>

    <script>
        // Update Order Status Function
        function updateOrderStatus(orderId, newStatus) {
            const statusMessages = {
                'confirmed': 'Are you sure you want to confirm this order?',
                'cancelled': 'Are you sure you want to reject this order? This action cannot be undone.',
                'in-transit': 'Mark this order as shipped/in-transit?',
                'delivered': 'Confirm that this order has been delivered to the customer?'
            };
            
            const message = statusMessages[newStatus] || `Update order status to ${newStatus}?`;
            
            if (confirm(message)) {
                fetch(`/orders/${orderId}/status`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        status: newStatus,
                        message: `Order ${newStatus} by farmer`
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(`‚úÖ Order status updated to ${newStatus}!`);
                        location.reload();
                    } else {
                        alert('‚ùå Failed to update order status: ' + (data.message || 'Unknown error'));
                    }
                })
                .catch(error => {
                    console.error('Error updating order status:', error);
                    alert('‚ùå Error updating order status. Please try again.');
                });
            }
        }

        // Auto-refresh every 30 seconds for real-time updates
        setInterval(() => {
            // Optional: Auto-refresh the page to show latest orders
            // location.reload();
        }, 30000);

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // Press 'R' to refresh
            if (e.key === 'r' && e.ctrlKey) {
                e.preventDefault();
                location.reload();
            }
        });
    </script>
</body>
</html>